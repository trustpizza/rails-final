<div class="profile-card">
  <div class="pic">
    <svg style="width:inherit;height:inherit" viewBox="0 0 24 24">
      <path fill="currentColor" d="M12,19.2C9.5,19.2 7.29,17.92 6,16C6.03,14 10,12.9 12,12.9C14,12.9 17.97,14 18,16C16.71,17.92 14.5,19.2 12,19.2M12,5A3,3 0 0,1 15,8A3,3 0 0,1 12,11A3,3 0 0,1 9,8A3,3 0 0,1 12,5M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12C22,6.47 17.5,2 12,2Z" />
    </svg>
  </div>
  <div class="profile-card-right">
    <div class="profile-card-right-top">
      <div class="name">
        <%= user.email %>
      </div>
      <div class="friend-button">
        <%= link_to "See Profile", user_path(user)%>
        <%= button_to 'Add Friend', user_friend_requests_path(user.id), 
                    params: { friend_request: {sender_id: current_user.id ,
                                              receiver_id: user.id}} %>  
      </div>
    </div>
    <div class="bio"></div>
  </div>
</div>
